---
import '../styles/global.css';
import BaseLayout from '../layouts/BaseLayout.astro';
import {Image} from 'astro:assets';
import photo from '/public/images/photo.jpg';
import star from '/public/icons/star.svg';

const title = "My website";
const name = "Nikita Osipov";
const description = "frontend developer";
const text = "Hey! I\'m Nikita, a frontend enthusiast based in Tbilisi, Georgia. With 3+ years of commercial experience in the JS/TS frontend world, specializing in React.js scope, and over 5 years of versatile developer background, I\'m passionate about creating user-friendly web apps and solving unique problems.  <br /> Versed in architectural and design patterns such as Domain Driven Design, Feature-Sliced Design and Clean Architecture. I also have some skills in backend frameworks (NestJS, Express) and Docker. <br />Currently, I\'m actively seeking a new project! <br /> <br /> If you\'d like to get in touch, feel free to reach out to me via Telegram or email using details below.";
const technologies = [
  {
    name: 'NextJS',
    primary: true
  },
  {
    name: 'Astro',
    primary: false
  },
  {
    name: 'JavaScript',
    primary: true
  },
  {
    name: 'TypeScript',
    primary: true
  },
  {
    name: 'React',
    primary: true
  },
  {
    name: 'SCSS',
    primary: true
  },
  {
    name: 'Tailwind CSS',
    primary: true
  },
  {
    name: 'NestJS',
    primary: false
  },
  {
    name: 'Strapi',
    primary: false
  },
  {
    name: 'NodeJS',
    primary: false
  },
  {
    name: 'ExpressJS',
    primary: false
  },
  {
    name: 'Docker',
    primary: false
  },
  {
    name: 'Gitlab CI',
    primary: false
  },
  {
    name: 'Python',
    primary: false
  },
  {
    name: 'C#',
    primary: false
  }
]
---

<BaseLayout title={title}>
  <section class="flex flex-col items-center justify-center py-8 text-left">
    <div class="my-8 flex flex-row items-center self-start">
      <Image src={photo} alt="that's me" class="rounded-full w-32 h-32 object-cover dark:grayscale-[50%]"/>
      <div class="mx-8">
        <h1 class="text-3xl font-bold mb-2 max-w-64 whitespace-nowrap">{name}</h1>
        <p class="opacity-80">{description}</p>
      </div>
    </div>
    <p class="my-2 self-start text-md" set:html={text}/>
  </section>

    <section class="pt-8">
      <h2 class="text-2xl font-semibold mb-8">Skills</h2>
      <div class="container flex flex-row flex-wrap max-w-md">
        {technologies.map((item) => (
          <div class="px-2 py-1 m-2 relative border rounded-xl whitespace-nowrap">
            {item.name}
            {item.primary &&
                    // inline svg for theme switch colors
                    <svg class="absolute top-[-5px] right-[-5px] fill-yellow-300 dark:fill-yellow-600" width="16px" height="16px" viewBox="0 0 24 24"
                                 xmlns="http://www.w3.org/2000/svg">
                        <path d="M9.15316 5.40838C10.4198 3.13613 11.0531 2 12 2C12.9469 2 13.5802 3.13612 14.8468 5.40837L15.1745 5.99623C15.5345 6.64193 15.7144 6.96479 15.9951 7.17781C16.2757 7.39083 16.6251 7.4699 17.3241 7.62805L17.9605 7.77203C20.4201 8.32856 21.65 8.60682 21.9426 9.54773C22.2352 10.4886 21.3968 11.4691 19.7199 13.4299L19.2861 13.9372C18.8096 14.4944 18.5713 14.773 18.4641 15.1177C18.357 15.4624 18.393 15.8341 18.465 16.5776L18.5306 17.2544C18.7841 19.8706 18.9109 21.1787 18.1449 21.7602C17.3788 22.3417 16.2273 21.8115 13.9243 20.7512L13.3285 20.4768C12.6741 20.1755 12.3469 20.0248 12 20.0248C11.6531 20.0248 11.3259 20.1755 10.6715 20.4768L10.0757 20.7512C7.77268 21.8115 6.62118 22.3417 5.85515 21.7602C5.08912 21.1787 5.21588 19.8706 5.4694 17.2544L5.53498 16.5776C5.60703 15.8341 5.64305 15.4624 5.53586 15.1177C5.42868 14.773 5.19043 14.4944 4.71392 13.9372L4.2801 13.4299C2.60325 11.4691 1.76482 10.4886 2.05742 9.54773C2.35002 8.60682 3.57986 8.32856 6.03954 7.77203L6.67589 7.62805C7.37485 7.4699 7.72433 7.39083 8.00494 7.17781C8.28555 6.96479 8.46553 6.64194 8.82547 5.99623L9.15316 5.40838Z"
                        />
                    </svg>}
          </div>
        ))}
      </div>
    </section>
</BaseLayout>
