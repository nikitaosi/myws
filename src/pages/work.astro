---
import '../styles/global.css';
import BaseLayout from '../layouts/BaseLayout.astro';

const title = "Work experience";

const experiences = [
  {
    company: 'Sber',
    position: 'Frontend Developer',
    descriptionList: ['Launched 2 new projects and refactored 3 existing ones.', 'Developed six gaming web applications as part of special projects, and created two educational courses about investments.','Participated in the development of a unified CMS for content websites in the cluster.', 'Mentored three developers and led two product teams.'],
    duration: 'april 2021 - april 2023',
  },
  {
    company: 'Business Integration',
    position: 'Frontend Developer',
    descriptionList: ['Refactored a service dashboard displaying the internal services status at the bank.'],
    duration: 'december 2020 - april 2021',
  },
  {
    company: '"Triumph" group of companies',
    position: 'Frontend Developer',
    descriptionList: ['Developed around 80 tools for the browser-based editor for clothing items, including UI and functionality.', 'Participated in the development of tools for sewing patterns on a 3D mannequin.','Contributed to backlog planning.', 'Mentored 6 new programmers.'],
    duration: 'september 2019 - september 2020',
  },
  {
    company: 'Web games development, Phaser.js',
    position: 'Developer',
    descriptionList: ['Wrote about six games in TypeScript and Phaser.js for the portfolio.', 'Completed approximately 400 tasks on basic algorithms during training.','Collaborated with another programmer to develop a commercial game-special project, a runner based on duck stories.'],
    duration: 'november 2018 - july 2019',
  },
  {
    company: 'RD Express',
    position: 'Developer',
    descriptionList: ['Designed and developed Telegram, WhatsApp, VK, and Viber bots, consisting of 4 separate services (showcase, product search, delivery processing, inventory checking) for organizing fulfillment for a comics delivery company.', 'Integrated with external services Dostavista and MoySklad.'],
    duration: 'june 2018 - november 2018',
  },
  {
    company: 'GMsite',
    position: 'Web Developer',
    descriptionList: ['Closed around 100 support tasks for existing clients of the company.','Created a new design from scratch for two websites, totaling around 20 separate pages.'],
    duration: 'january 2018 - june 2018',
  },
];
---


<BaseLayout title={title}>
  <section class="flex flex-col items-center justify-center py-16 text-left">
      <div class="mx-auto">
        <h2 class="text-3xl font-semibold mb-8">{title}</h2>
        {experiences.map(({company, position, descriptionList, duration}) => (
          <div class="mb-16">
            <h3 class="text-xl font-semibold">{company}</h3>
            <span class="mb-2">{position}</span>
            <br/>
            <span class="mt-2">{duration}</span>
            <br/>
            <br/>
              <ul class="list-disc pl-4">
                {
                  descriptionList.map((item) => (
                  <li>{item}</li>
                ))
                }
              </ul>
          </div>
        ))}
      </div>
  </section>
</BaseLayout>
