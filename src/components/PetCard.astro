---
const {title, image, description, technologies} = Astro.props.content;
import {Image} from 'astro:assets';
import TechBadge from "./TechBadge.astro";

---



<div class="border rounded-[20px] p-4 border-[rgb(var(--color-card))] hover:bg-[rgb(var(--color-fill-inverted))] hover:text-[rgb(var(--color-card))] transition">
  <h2 class="font-bold">{title}</h2>
  <!--<Image image alt=""/>-->
  <p>{description}</p>
  <div class="flex flex-row">
    {technologies.map((item: {name: string}) => (
      <TechBadge item={item}/>
    ))}
  </div>
</div>
